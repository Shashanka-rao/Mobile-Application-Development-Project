<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#220130"
    tools:context=".Home">


    <TextView
        android:id="@+id/newVehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="11dp"
        android:text="New vehicle"
        android:textColor="#23F1E5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="489dp"
        android:orientation="horizontal"></LinearLayout>

    <ImageView
        android:id="@+id/carImage"
        android:layout_width="324dp"
        android:layout_height="270dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="217dp"
        app:srcCompat="@drawable/baseline_car_repair_24" />

    <TextView
        android:id="@+id/bookServiceBtn"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="300dp"
        android:shadowColor="#BFB7B7"
        android:text="Book Service"
        android:textColor="#23F1E5"
        android:textSize="34sp"
         />

    <TextView
        android:id="@+id/trackServiceBtn"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="150dp"
        android:text="Track Service"
        android:textColor="#23F1E5"
        android:textSize="34sp"
        />

    <TextView
        android:id="@+id/serviceHistoryBtn"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="300dp"
        android:text="Service History"
        android:textColor="#23F1E5"
        android:textSize="34sp"
        />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="10dp"
        android:text="Contact us"
        android:textColor="#23F1E5" />

    <ImageView
        android:id="@+id/notificationBtn"
        android:layout_width="41dp"
        android:layout_height="46dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="665dp"
        app:srcCompat="@drawable/baseline_notifications_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="35dp">


        <ImageView
            android:id="@+id/dashBoardBtn"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/baseline_dashboard_24" />

        <ImageView
            android:id="@+id/addNewvehicleBtn"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/baseline_new_label_24" />

        <ImageView
            android:id="@+id/contactUsBtn"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/baseline_contact_support_24" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="10dp"
        android:text="Dashboard"
        android:textColor="#23F1E5" />

    <TextView
        android:id="@+id/serviceCostBtn"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="150dp"
        android:text="Service Cost"
        android:textColor="#23F1E5"
        android:textSize="34sp"
       />

</RelativeLayout>