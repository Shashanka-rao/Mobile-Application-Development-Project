<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#220130"
    android:orientation="vertical"
    tools:context=".ServiceHistory" >

    <ImageButton
        android:id="@+id/backButtonBSSH"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="325dp"
        android:layout_marginBottom="-80dp"
        android:backgroundTint="#220130"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="130dp"
        android:text="Service History"
        android:textAlignment="center"
        android:textColor="#23F1E5"
        android:textSize="48sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"
        android:background="#292829"
        android:orientation="vertical"

        android:padding="10dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_margin="2.5dp"
            android:layout_weight="1"
            android:text="Service 1"
            android:textColor="#23F1E5"
            android:textSize="28dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="82dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:text="Kms"
                android:textColor="#23F1E5"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="88dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:text="Date"
                android:textColor="#23F1E5"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="82dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:text="Bill"
                android:textColor="#23F1E5"
                android:textSize="22dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="82dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:hint="000"
                android:text=""
                android:textColorHint="#FFFFEE"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="88dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:hint="DD-MM-YY"
                android:text=""
                android:textColorHint="#FFFFEE"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="82dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:hint="00"
                android:text=""
                android:textColorHint="#FFFFEE"
                android:textSize="22dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>