<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7E638C"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="#220130"
            android:orientation="vertical">

            <TextView
                android:id="@+id/DisplayKms"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/buttonradius"
                android:backgroundTint="#292329"
                android:text="kms"
                android:textAlignment="center"
                android:textColor="#23F1E5"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Description"
                android:textAlignment="center"
                android:textColor="#00FFFF"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Price"
                android:textAlignment="center"
                android:textColor="#00FFFF"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvQty"
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Quantity"
                android:textAlignment="center"
                android:textColor="#00FFFF"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Sub Total"
                android:textAlignment="center"
                android:textColor="#00FFFF"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvEngineOil"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Engine Oil"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvEOPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="300"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvEOQty"
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvEOTotal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="600"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBrakeFluid"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Brake Fluid"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvBFPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="350"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvBFQty"
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvBFTotal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="350"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvGearOil"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Gear Oil"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvGOPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="200"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvGOQty"
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvGOTotal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="200"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSeatCushion"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Seat Cusion"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvSCPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="750"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvSCQty"
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvSCTotal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2250"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvWash"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Washing"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvWPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="250"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvWQty"
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvWTotal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="250"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvBillDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:paddingLeft="30dp"
            android:text="Date :"
            android:textColor="#00FFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:paddingLeft="30dp"
            android:text="Total : Rs "
            android:textColor="#00FFFF"
            android:textSize="24sp" />


    </LinearLayout>
</androidx.cardview.widget.CardView>