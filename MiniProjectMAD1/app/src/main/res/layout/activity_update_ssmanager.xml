<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292829"
    tools:context=".MainClasses.trackService">

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="413dp"
        android:layout_height="107dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_radius"
        android:backgroundTint="#007BFF"
        android:padding="25dp"
        android:text="Update Service Status"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="357dp"
        android:layout_height="130dp"
        android:layout_margin="30dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#292829"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHeading">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonradius"
            android:backgroundTint="#292829"
            android:orientation="vertical">

            <TextView
                android:id="@+id/usernameUSS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8BF5FA"
                android:background="@drawable/top_round_radius"
                android:paddingLeft="20dp"
                android:text="Username: "
                android:textAlignment="textStart"
                android:textColor="#1e2749"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/regNoUSS"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#8BF5FA"
                android:paddingLeft="20dp"
                android:text="Reg No.: "
                android:textAlignment="textStart"
                android:textColor="#1e2749"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#8BF5FA"
                android:paddingLeft="20dp"
                android:text="Advisor : Ramesh"
                android:textAlignment="textStart"
                android:textColor="#1e2749"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/timeSlotUSS"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#8BF5FA"
                android:background="@drawable/round_radius"
                android:paddingLeft="20dp"
                android:text="Time Slot : "
                android:textAlignment="textStart"
                android:textColor="#1e2749"
                android:textSize="22dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <!--    constraint-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="193dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="60dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <CheckBox
                android:id="@+id/cbVehicleIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#292829"
                android:buttonTint="#23F1E5"
                android:text="Vehicle In"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />

            <CheckBox
                android:id="@+id/cbROOpen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#292829"
                android:buttonTint="#23F1E5"
                android:text="RO Open"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />

            <CheckBox
                android:id="@+id/cbInService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#292829"
                android:buttonTint="#23F1E5"
                android:text="In Service"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />

            <CheckBox
                android:id="@+id/cbQualityCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#292829"
                android:buttonTint="#23F1E5"
                android:text="Quality Check"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />

            <CheckBox
                android:id="@+id/cbWashing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#292829"
                android:buttonTint="#23F1E5"
                android:text="Washing"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />

            <CheckBox
                android:id="@+id/cbDOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#292829"
                android:buttonTint="#23F1E5"
                android:drawableTint="#000000"
                android:text="Vehicle Ready"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="143dp"
            android:layout_height="203dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="50dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvCVehicleIn"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#292829"
                android:buttonTint="#23F1E5"
                android:text="PENDING"

                android:textColor="#23F1E5"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCROOpen"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#292829"
                android:buttonTint="#23F1E5"
                android:text="PENDING"
                android:textColor="#23F1E5"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCInService"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="#292829"
                android:buttonTint="#23F1E5"
                android:text="PENDING"
                android:textColor="#23F1E5"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCQualityCheck"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#292829"
                android:buttonTint="#23F1E5"
                android:text="PENDING"
                android:textColor="#23F1E5"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCWashing"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#292829"
                android:buttonTint="#23F1E5"
                android:text="PENDING"
                android:textColor="#23F1E5"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCDone"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#292829"
                android:buttonTint="#23F1E5"
                android:text="PENDING"
                android:textColor="#23F1E5"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/genBillBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="225dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/buttonradius"
        android:text="Generate Bill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/updateUSSBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/buttonradius"
        android:backgroundTint="#FFC107"
        android:text="update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/clearBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="151dp"
        android:background="#292829"
        android:text="clear"
        android:textColor="#292829"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
