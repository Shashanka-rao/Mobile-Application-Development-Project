<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#220130"
    tools:context=".MainClasses.HomeManager">

    <Button
        android:id="@+id/logoutButtonMan"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="306dp"
        android:layout_marginBottom="800dp"
        android:background="@drawable/buttonradius"
        android:text="logout" />

    <TextView
        android:id="@+id/ManTv"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="524dp"
        android:text="Hello Manager!"
        android:textColor="#23F1E5"
        android:textSize="40dp" />


    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="206dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="101dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="286dp"
        android:background="#23F1E5"
        android:src="@drawable/management"
        />

    <LinearLayout
        android:layout_width="405dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="45dp"
        android:background="#23F1E5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/viewBookingsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/viewbokkings" />

        <ImageView
            android:id="@+id/billEntryBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/bill" />

        <ImageView
            android:id="@+id/updateSSBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/changes" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvViewBookings"
            android:layout_width="123dp"
            android:layout_height="match_parent"

            android:text="View bookings"
            android:textAlignment="center"
            android:textColor="#23F1E5"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvBillEntry"
            android:layout_width="123dp"
            android:layout_height="match_parent"

            android:text="Bill Entry"
            android:textAlignment="center"
            android:textColor="#23F1E5"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvUpdateSS"
            android:layout_width="123dp"
            android:layout_height="match_parent"

            android:text="Update Service Status"
            android:textAlignment="center"
            android:textColor="#23F1E5"
            android:textSize="18dp" />
    </LinearLayout>


</RelativeLayout>