<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#220130"
    tools:context=".MainClasses.Login">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="325dp"
        android:layout_marginBottom="671dp"
        android:backgroundTint="#220130"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="160dp"
        android:layout_height="166dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="488dp"
        app:srcCompat="@drawable/baseline_login_24"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="87dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="420dp"
        android:text="Hey User!"
        android:textColor="#DEDEDE"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="400dp"
        android:text="Please fill the input below here"
        android:textColor="#AEA3A3"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/loginEmail"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="312dp"
        android:background="@drawable/edittextradius"
        android:backgroundTint="#7E638C"
        android:drawableStart="@drawable/baseline_person_outline_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="e-mail"
        android:inputType="text"
        android:padding="8dp"
        android:text=""
        android:textColorHint="#DEDEDE"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="124dp" />

    <EditText
        android:id="@+id/loginPassword"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="214dp"
        android:background="@drawable/edittextradius"
        android:backgroundTint="#7E638C"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="7dp"
        android:textColorHint="#DEDEDE"
        android:textSize="18dp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="272dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/buttonradius"
        android:text="login"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#220130"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="170dp"
        android:layout_marginBottom="31dp"
        android:text="Don't have an account?"
        android:textColor="#DEDEDE"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/signUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="34dp"
        android:text="Sign Up"
        android:textColor="#23F1E5" />


</RelativeLayout>